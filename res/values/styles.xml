<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:windowBackground">@android:color/background_light</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="common_textview" parent="@android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="common_input" parent="@android:Widget.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">11dip</item>
        <item name="android:paddingBottom">11dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
<!-- 个人信息展示左侧 -->
    <style name="user_info_textview1" parent="@android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <!-- 编辑个人信息右侧button -->
    <style name="user_info_textview2" parent="@android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <!-- 编辑个人信息左侧textview -->
    <style name="user_info_textview3" parent="@android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#77BB44</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="menu_linerlayout" >
        <item name="android:background">@drawable/btn_menu</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>
	<style name="Dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>

	</style>
</resources>