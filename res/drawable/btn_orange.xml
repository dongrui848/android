<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item   android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/btn_orange_normal" />
    <item   android:state_pressed="true" android:state_enabled="true"  android:drawable="@drawable/btn_orange_pressed" />
    <item   android:state_enabled="false"  android:drawable="@drawable/btn_bg_gray" />
  
</selector>
