<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_first="true"   android:drawable="@drawable/ic_start_empty" />
    <item  android:state_middle="true"  android:drawable="@drawable/ic_start_ture" />
    <item  android:state_last="true"   android:drawable="@drawable/ic_start_false" />
  
</selector>
