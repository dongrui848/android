<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:layout_width="fill_parent" android:layout_height="fill_parent">

    
    
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image_logo_start" />

    <TimePicker
        android:id="@+id/timePicker1"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/textView1"
        android:background="#91C855"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        
        android:text="您好" />


    <LinearLayout android:orientation="horizontal"
        android:background="@drawable/start_bottom_bar"
            android:gravity="bottom|center_horizontal" 
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            >
        <Button
             android:id="@+id/button_register"
             android:padding="0dip"
             android:layout_marginRight="10dip"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="@drawable/btn_more"
            
             android:layout_weight="1"
            />
        <Button android:id="@+id/button_login"
            android:padding="0dip"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="@drawable/btn_user"
            />
        <Button android:id="@+id/button_login"
            android:padding="0dip"
            android:layout_marginLeft="10dip"
                      android:layout_weight="1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="@drawable/btn_seting"
            />
    </LinearLayout>
</LinearLayout>

