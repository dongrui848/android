<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" 
        android:layout_width="fill_parent" android:layout_height="fill_parent">

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1750">
    </android.support.v4.view.ViewPager>

    <LinearLayout android:orientation="horizontal"
        android:background="@drawable/start_bottom_bar"
            android:gravity="bottom|center_horizontal" 
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_weight="170"
            android:paddingBottom="10dip"
            >
        <Button
             android:id="@+id/button_register"
             android:layout_marginRight="10dip"
             android:layout_marginLeft="15dip"
             android:layout_weight="1"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:background="@drawable/btn_bule"
            android:text=" 现在注册"
            android:textColor="@color/white"
              android:gravity="center"
              android:singleLine="true"
            android:drawableStart="@drawable/ic_registration"
            />
        <Button android:id="@+id/button_login"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
             android:background="@drawable/btn_bule"
             android:gravity="center"
             android:text="登陆"
             android:singleLine="true"
             android:textColor="@color/white"
             android:drawableStart="@drawable/ic_login"
            >
        </Button>
        <Button android:id="@+id/button_forgetpassword"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
             android:background="@drawable/btn_bg_gray"
             android:gravity="center"
             android:text="忘记密码？"
             android:singleLine="true"
             android:textColor="@color/white"
            >
        </Button>
    </LinearLayout>
</LinearLayout>

