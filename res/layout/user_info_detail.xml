<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgcolor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dip" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_top_bar_style2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" >

                <ImageView
                    android:id="@+id/imageview_touxiang"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_square"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/user_info_textview1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="信誉值" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="97%"
                        android:textColor="#FF7700"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/user_info_textview1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="好评(90%)" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="5dip"
                        android:layout_weight="0.7"
                        android:max="100"
                        android:progress="80"
                        android:progressDrawable="@drawable/progressbar_bg"
                        android:secondaryProgress="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/user_info_textview1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="中评(90%)" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="5dip"
                        android:layout_weight="0.7"
                        android:indeterminateDrawable="@color/blue"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progressbar_bg"
                        android:secondaryProgress="50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/user_info_textview1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="差评(90%)" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="5dip"
                        android:layout_weight="0.7"
                        android:indeterminateDrawable="@color/blue"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progressbar_bg"
                        android:secondaryProgress="50" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/add_verfy_car"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_addcar"
            android:drawableLeft="@drawable/ic_add_car"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dip"
            android:text="增加验证车辆信息"
            android:textColor="@color/white" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dip"
        >

        <!-- 发那个小 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:singleLine="true"
                android:text="手机号码:" />

            <TextView
                android:id="@+id/tview1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:textColor="@color/black" />

            <TextView
                style="@style/user_info_textview1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="470"
                android:drawableLeft="@drawable/ic_agree_ok"
                android:text="已验证" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/common_line" />

        <LinearLayout
            android:id="@+id/layout_renzheng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:clickable="true"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="实名认证:" />

            <TextView
                 android:id="@+id/tview2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:text="已完成"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textview_yanzheng2"
                style="@style/user_info_textview1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="470"
                android:drawableLeft="@drawable/ic_agree_ok"
                android:text="已验证" />
        </LinearLayout>
      

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:src="@drawable/common_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="常用线路:" />

            <TextView
                 android:id="@+id/tview3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="170"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:src="@drawable/common_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="公司地址:" />

            <TextView
                 android:id="@+id/tview4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="170"
                android:text="保密"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:src="@drawable/common_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="家庭地址:" />

            <TextView
                 android:id="@+id/tview5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="170"
                android:text="保密"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:src="@color/white" />
    </LinearLayout>

    <!-- yincang -->

    <LinearLayout
        android:id="@+id/editlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:visibility="gone"
        >

        <!-- 发那个小 -->

        <LinearLayout
            android:id="@+id/ledit1"
            style="@style/menu_linerlayout"
            android:layout_width="fill_parent"
            
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="编辑签名备注信息:" />

            <TextView
                android:id="@+id/tedit1"
                style="@style/user_info_textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_next"
                android:text="备注"
                android:singleLine="true" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:src="@drawable/common_line" />

        <LinearLayout
            android:id="@+id/ledit2"
            style="@style/menu_linerlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="编辑公司地址:" />

            <TextView
                android:id="@+id/tedit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_next"
                android:singleLine="true"
                android:textSize="@dimen/text_view_basesize" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:src="@drawable/common_line" />

        <LinearLayout
            android:id="@+id/ledit3"
            style="@style/menu_linerlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="家庭地址:" />

            <TextView
                android:id="@+id/tedit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_next"
                android:singleLine="true"
                android:textSize="@dimen/text_view_basesize" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:src="@drawable/common_line" />

        <LinearLayout
            android:id="@+id/ledit4"
            style="@style/menu_linerlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_info_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="更换手机号码:" />

            <TextView
                android:id="@+id/tedit4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_next"
                android:singleLine="true"
                android:textSize="@dimen/text_view_basesize" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:src="@drawable/common_line" />

        <LinearLayout
            android:id="@+id/ledit5"
            style="@style/menu_linerlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tedit5"
                style="@style/user_info_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="编辑常用线路:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_next"
                android:singleLine="true"
                android:textSize="@dimen/text_view_basesize" />
        </LinearLayout>

      
    </LinearLayout>

</LinearLayout>