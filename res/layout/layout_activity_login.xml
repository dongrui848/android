<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dip" >

    <ImageView
        android:id="@+id/st_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:src="@drawable/st_logo" />

    <EditText
        android:id="@+id/textuserName"
        style="@style/common_input"
        android:layout_marginTop="50dip"
        android:background="@drawable/common_input_bg"
        android:drawableRight="@drawable/ic_agree_no"
        android:gravity="center_vertical"
        android:hint="@string/phone"
        android:inputType="phone"
        android:maxLength="11"
        
        />

    <EditText
        android:id="@+id/textpassword"
        style="@style/common_input"
        android:layout_marginTop="10dip"
        android:background="@drawable/common_input_bg"
        android:drawableRight="@drawable/ic_agree_no"
        android:gravity="center_vertical"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="15"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dip"
        android:layout_marginRight="29dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_bule"
        android:text="登陆"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>