<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:layout_width="fill_parent" android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_logo_start" />

    <TextView
        android:id="@+id/text_nav"
        android:layout_below="@id/imageView1"
        android:background="@drawable/nav_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="您好" />

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_below="@id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/start_bottom_bar"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_alignParentLeft="true"
             android:id="@+id/button_opt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/btn_more"
            android:background="@android:color/transparent"
            
            />
        <ImageButton 
            
            android:id="@+id/button_user"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/btn_user"
             android:background="@android:color/transparent"
            />
        <ImageButton 
            android:layout_alignParentRight="true"
            android:id="@+id/button_set"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/btn_seting"
             android:background="@android:color/transparent"
            />
    </RelativeLayout>
<LinearLayout
    android:layout_above="@id/menu"
    android:layout_marginBottom="5dip"
     android:layout_width="fill_parent" android:layout_height="wrap_content"
     android:gravity="center"
     >
    <ImageView 
        android:id="@+id/round1"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:src="@drawable/common_yuan"
        />
    <ImageView 
        
        android:id="@+id/round2"
        android:layout_marginLeft="5dip"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:src="@drawable/common_yuan_white"
        />
    <ImageView 
        android:id="@+id/round3"
        android:layout_marginLeft="5dip"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:src="@drawable/common_yuan_white"
        />
    
</LinearLayout>


</RelativeLayout>

